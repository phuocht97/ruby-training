<h1>Edit Patient</h1>
<%= form_for :hospital, url: hospital_path(@hospital), method: :patch do |form|%>
		<% if @hospital.errors.any? %>
			<% @hospital.errors.full_messages.each do |msg| %>
				<div class="alert alert-danger"><%= msg %></div>
			<% end %>
		<% end %>
	<p>
		<%= form.label :name %><br>
		<%= form.text_field :name %>
	</p>
	<p>
		<%= form.label :age %><br>
		<%= form.text_field :age %>
	</p>
	<p>
		<%= form.submit 'Edit Patient' , class: "btn btn-primary" %>
	</p>
<% end %>