<h1>Add Patient</h1>
<%= form_for :hospital, url: hospitals_path do |form|%>
		<% if @hospital.errors.any? %>
			<% @hospital.errors.full_messages.each do |msg| %>
				<div class="alert alert-danger"><%= msg %></div>
			<% end %>
		<% end %>
	<p>
		<%= form.label :name %><br>
		<%= form.text_field :name %>
	</p>
	<p>
		<%= form.label :age %><br>
		<%= form.text_field :age %>
	</p>
	<p>
		<%= form.submit 'New Patient' , class: "btn btn-primary" %>
		<%= link_to "Back", hospitals_path , class: "btn btn-warning dropdown-toggle" %>
	</p>
<% end %>